{
  "compilerOptions": {
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,
    "types": ["vite/client"],
    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "allowSyntheticDefaultImports": true,
    "isolatedModules": true,
    "moduleDetection": "force",
    "noEmit": true,
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    "esModuleInterop": true,

    /* Linting */
    "strict": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedSideEffectImports": true,

    /* Declaration files */
    "declaration": true,
    "declarationMap": true
  },
  "include": ["src", "./typings.d.ts", "../ui-icons"],
  "exclude": [
    "node_modules",
    "dist",
    "build",
    "coverage",
    "public",
    "vite.config.ts",
    "vite-env.d.ts",
    "tsconfig.json",
    "tsconfig.node.json",
    "tsconfig.build.json"
  ]
}
