# =============================================================================
# BAAA Hub - Local Development Environment Configuration
# =============================================================================
# Copy this file to .env.dev and configure for local development
#
# Usage:
#   cp environments/.env.example environments/.env.dev
#   pnpm dev
# =============================================================================

# =============================================================================
# Frontend Configuration (Vite)
# =============================================================================
# All frontend environment variables must be prefixed with VITE_

# API Configuration
VITE_API_URL=http://localhost:3000

# Keycloak Configuration
VITE_KEYCLOAK_URL=http://localhost:8180
VITE_KEYCLOAK_REALM=baaa-hub
VITE_KEYCLOAK_CLIENT_ID=baaa-hub-client

# =============================================================================
# Backend Configuration (Node.js)
# =============================================================================

# Server Configuration
BACKEND_PORT=3000
NODE_ENV=development

# MongoDB Configuration (uses docker-compose MongoDB)
MONGODB_URI=mongodb://localhost:27017/baaa-hub

# CORS Configuration
CORS_ORIGIN=http://localhost:4000

# Keycloak Configuration (Backend)
KEYCLOAK_URL=http://localhost:8180
KEYCLOAK_REALM=baaa-hub
KEYCLOAK_CLIENT_ID=baaa-hub-client
KEYCLOAK_WEBHOOK_SECRET=your-secure-webhook-secret

# Debug Mode
DEBUG=true

# =============================================================================
# MinIO Object Storage Configuration
# =============================================================================
# MinIO runs via docker-compose on localhost:9000

MINIO_ENDPOINT=localhost
MINIO_PORT=9000
MINIO_USE_SSL=false
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET=baaa-hub-images
MINIO_REGION=us-east-1

# =============================================================================
# Keycloak Local Development Configuration
# =============================================================================
# Keycloak runs via docker-compose on localhost:8180
# These are used by docker-compose for local Keycloak setup

# Keycloak Admin Console Credentials
KEYCLOAK_ADMIN=admin
KEYCLOAK_ADMIN_PASSWORD=admin

# Keycloak Database Credentials
KEYCLOAK_DB_USER=keycloak
KEYCLOAK_DB_PASSWORD=keycloak

# =============================================================================
# Environment Selector
# =============================================================================
# Options: dev, prod, test (default: dev)
ENV=dev
