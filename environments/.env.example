# =============================================================================
# BAAA Hub - Local Development Environment Configuration
# =============================================================================
# Copy this file to .env.dev and configure for local development
#
# Usage:
#   cp environments/.env.example environments/.env.dev
#   pnpm dev
# =============================================================================

# =============================================================================
# Frontend Configuration (Vite)
# =============================================================================
# All frontend environment variables must be prefixed with VITE_

# API Configuration
VITE_API_URL=http://localhost:3000

# Auth0 Configuration
VITE_AUTH_DOMAIN=your-tenant.auth0.com
VITE_AUTH_CLIENT_ID=your-client-id
VITE_AUTH_DATABASE_CONNECTION=Username-Password-Authentication
VITE_AUTH_REDIRECT_URI=http://localhost:4000/login/callback

# =============================================================================
# Backend Configuration (Node.js)
# =============================================================================

# Server Configuration
BACKEND_PORT=3000
NODE_ENV=development

# MongoDB Configuration (uses docker-compose MongoDB)
MONGODB_URI=mongodb://localhost:27017/baaa-hub

# CORS Configuration
CORS_ORIGIN=http://localhost:4000

# Auth0 Configuration (Backend)
AUTH0_DOMAIN=your-tenant.auth0.com
AUTH0_AUDIENCE=your-api-audience
AUTH0_WEBHOOK_SECRET=your-secure-webhook-secret

# Debug Mode
DEBUG=true

# =============================================================================
# MinIO Object Storage Configuration
# =============================================================================
# MinIO runs via docker-compose on localhost:9000

MINIO_ENDPOINT=localhost
MINIO_PORT=9000
MINIO_USE_SSL=false
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET=baaa-hub-images
MINIO_REGION=us-east-1

# =============================================================================
# Environment Selector
# =============================================================================
# Options: dev, prod, test (default: dev)
ENV=dev
